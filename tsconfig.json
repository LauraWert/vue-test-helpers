{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "types",
    "types": [
      "chai",
      "mocha",
      "node",
      "sinon",
      "sinon-chai"
    ],
    "paths": {
      "tests/*": [
        "./tests/*"
      ]
    },
    "lib": [
      "es2018",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}